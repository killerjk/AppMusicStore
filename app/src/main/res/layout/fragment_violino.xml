<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout_pesquisar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_pesquisar_violino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:id="@+id/view_violinoRolim"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_violinoRolim"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/violinopreto"
        app:layout_constraintBottom_toBottomOf="@id/view_violinoRolim"
        app:layout_constraintStart_toStartOf="@+id/view_violinoRolim"
        app:layout_constraintTop_toTopOf="@id/view_violinoRolim" />

    <TextView
        android:id="@+id/txt_violinoRolim"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:text="@string/violinoRolim"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/view_violinoRolim"
        app:layout_constraintEnd_toStartOf="@+id/veja_mais_violinoRolim"
        app:layout_constraintStart_toEndOf="@id/image_violinoRolim"
        app:layout_constraintTop_toTopOf="@+id/view_violinoRolim" />

    <Button
        android:id="@+id/veja_mais_violinoRolim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="Veja \nMais"
        android:textColor="@color/black"
        app:backgroundTint="@color/green"
        app:layout_constraintBottom_toBottomOf="@id/view_violinoRolim"
        app:layout_constraintEnd_toEndOf="@id/view_violinoRolim"
        app:layout_constraintTop_toTopOf="@+id/view_violinoRolim" />

    <View
        android:id="@+id/view_violinoLuthier"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_violinoRolim" />

    <ImageView
        android:id="@+id/image_violinoLuthier"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/violinoluthier"
        app:layout_constraintBottom_toBottomOf="@id/view_violinoLuthier"
        app:layout_constraintStart_toStartOf="@id/view_violinoLuthier"
        app:layout_constraintTop_toTopOf="@id/view_violinoLuthier"/>

    <TextView
        android:id="@+id/txt_violinoLuthier"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/violinoLuthier"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/view_violinoLuthier"
        app:layout_constraintEnd_toStartOf="@+id/veja_mais_violinoLuthier"
        app:layout_constraintStart_toEndOf="@id/image_violinoLuthier"
        app:layout_constraintTop_toTopOf="@id/view_violinoLuthier" />

    <Button
        android:id="@+id/veja_mais_violinoLuthier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="Veja \nMais"
        android:textColor="@color/black"
        app:backgroundTint="@color/green"
        app:layout_constraintBottom_toBottomOf="@id/view_violinoLuthier"
        app:layout_constraintEnd_toEndOf="@id/view_violinoLuthier"
        app:layout_constraintTop_toTopOf="@id/view_violinoLuthier" />
</androidx.constraintlayout.widget.ConstraintLayout>